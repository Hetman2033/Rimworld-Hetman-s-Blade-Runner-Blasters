<Defs>

    <ThingDef ParentName="BaseHumanMakeableGun" Name="BladeRunnerBlasters_2019detectivespecial">

        <defName>BladeRunnerBlasters_2019detectivespecial</defName>

        <label>2019 Detective Special</label>

        <description>Standard-issue blaster the Los Angeles Police Department Blade Runner Unit. The 2019 version has a bigger kick in exchange for it's bigger weight.</description>

        <possessionCount>1</possessionCount>

        <graphicData>

        <texPath>Hetman_Blade_Runner_Blasters/2019DetectiveSpecial</texPath>

        <graphicClass>Graphic_Single</graphicClass>

        <drawSize>0.6</drawSize>

        </graphicData>

        <uiIconScale>1.2</uiIconScale>

        <soundInteract>Interact_Revolver</soundInteract>

        <statBases>

            <WorkToMake>5000</WorkToMake>

            <Mass>1.8</Mass>

            <AccuracyTouch>0.85</AccuracyTouch>

            <AccuracyShort>0.80</AccuracyShort>

            <AccuracyMedium>0.65</AccuracyMedium>

            <AccuracyLong>0.45</AccuracyLong>

            <RangedWeapon_Cooldown>1.7</RangedWeapon_Cooldown>

        </statBases>

        <weaponTags>

            <li>SimpleGun</li>

            <li>2019 Detective Special</li>

        </weaponTags>

        <weaponClasses>

            <li>RangedLight</li>

        </weaponClasses>

        <costList>

            <Steel>150</Steel>

            <ComponentIndustrial>4</ComponentIndustrial>

            <Plasteel>50</Plasteel>

        </costList>

        <recipeMaker>

            <researchPrerequisite>BladeRunnerBlastersTech</researchPrerequisite>

            <skillRequirements>

                <Crafting>6</Crafting>

            </skillRequirements>

            <displayPriority>400</displayPriority>

        </recipeMaker>

        <verbs>

            <li>

                <verbClass>Verb_Shoot</verbClass>

                <hasStandardCommand>true</hasStandardCommand>

                <defaultProjectile>Bullet_2019detectivespecial</defaultProjectile>

                <warmupTime>0.5</warmupTime>

                <range>15</range>

                <soundCast>BladeRunnerBlasters_2019DetectiveSpecialShot</soundCast>

                <soundCastTail>GunTail_Light</soundCastTail>

                <muzzleFlashScale>10</muzzleFlashScale>

            </li>

        </verbs>

        <tools>

            <li>

                <label>grip</label>

                <capacities>

                    <li>Blunt</li>

                </capacities>

                <power>10</power>

                <cooldownTime>2.5</cooldownTime>

            </li>

            <li>

                <label>barrel</label>

                <capacities>

                    <li>Blunt</li>

                    <li>Poke</li>

                </capacities>

                <power>10</power>

                <cooldownTime>3</cooldownTime>

            </li>

        </tools>

    </ThingDef>

